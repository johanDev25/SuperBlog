<main role="main" class="container">
  <div class="my-3 p-3 bg-white rounded shadow-sm">
    <h6 class="border-bottom border-gray pb-2 mb-0">Ultimos Posts</h6>
    <% @posts.each do |post| %>
    <div class="media text-muted pt-3">
      <svg class="bd-placeholder-img mr-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: 32x32"><title>Placeholder</title><rect width="100%" height="100%" fill="#F54646"/><text x="50%" y="50%" fill="#F54646" dy=".3em">32x32</text></svg>
      <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray text-truncate">
        <strong class="d-block text-gray-dark"><%= link_to post.name, post %></strong>
         <strong class="d-block text-gray-dark"><%= post.created_at.strftime("%Y-%m-%d(%T)") %>  by <%= post.user.name %></strong>
          <%= post.body %>
      </p>
    </div>
           <% if signed_in? && post.user == current_user %>
          <nav class="blog-pagination py-3 col-10">
            <%= link_to "<span class='fas fa-edit'></span> Editar".html_safe, edit_post_path(post)%>
            <%= link_to "<span class='fas fa-trash-alt'></span> Eliminar".html_safe, post, method: :delete, data: { confirm: "¿Estás seguro de eliminar este post?" }%>
          </nav>
          <% end %>
    <% end %>
  </div>
</main>